{
  "name": "react-state-management",
  "version": "1.0.0",
  "description": "react state management library written with typescript",
  "repository": {
    "type": "git",
    "url": "https://github.com/morlombakop/react-state-management.git"
  },
  "author": "Morlo Mbakop",
  "license": "UNLICENSED",
  "main": "src/index.tsx",
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "build": "npm run type-check && parcel build ./src/index.html --public-url '/'",
    "start": "parcel ./src/index.html",
    "test": "jest --no-cache",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "dependencies": {
    "faker": "^4.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.1",
    "styled-components": "^4.3.1"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "@types/faker": "^4.1.5",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.3",
    "@types/styled-components": "^4.1.16",
    "concurrently": "^4.1.0",
    "cypress": "^3.3.1",
    "jest": "^24.8.0",
    "jest-dom": "^3.5.0",
    "jest-styled-components": "^6.3.1",
    "parcel": "^1.12.3",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.1"
  }
}
